#!/bin/sh -e

ALFRESCO_SCRIPT="/opt/ansible/bin/alfresco.sh"

if [ "$1" = "start" ]; then
 su - ansible "${ALFRESCO_SCRIPT}" "start"
elif [ "$1" = "stop" ]; then
 su - ansible "${ALFRESCO_SCRIPT}" "stop"
elif [ "$1" = "restart" ]; then
 su - ansible "${ALFRESCO_SCRIPT}" "stop"
 su - ansible "${ALFRESCO_SCRIPT}" "start"
else
 echo "Usage: /etc/init.d/alfresco [start|stop|restart]"
fi
